{
    "name": "nekonekostatus",
    "version": "1.0.0",
    "description": "A simple server status monitor",
    "main": "index.js",
    "scripts": {
        "start": "node nekonekostatus.js",
        "dev": "concurrently \"npm run watch:css\" \"nodemon nekonekostatus.js\"",
        "build:css": "node build-css.js",
        "watch:css": "nodemon --watch static/css/tailwind.css --watch views/**/*.html --exec 'npm run build:css'",
        "test": "node tests/migration_test.js",
        "test:migration": "node tests/migration_test.js",
        "migrate": "node scripts/migrate.js",
        "migrate:test": "node tests/migration_test.js"
    },
    "keywords": [],
    "engines": {
        "node": ">=12"
    },
    "author": "nekoneko",
    "license": "ISC",
    "dependencies": {
        "better-sqlite3": "^11.8.1",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "express-ws": "^5.0.2",
        "fs": "0.0.1-security",
        "js-yaml": "^4.1.0",
        "md5": "^2.3.0",
        "node-fetch": "^2.6.1",
        "node-schedule": "^2.0.0",
        "node-ssh": "^13.1.0",
        "node-telegram-bot-api": "^0.54.0",
        "npm": "^7.20.6",
        "nunjucks": "^3.2.3",
        "request": "^2.88.2",
        "request-promise": "^4.2.6",
        "socket.io": "^4.1.3",
        "uuid": "^8.3.2",
        "sortablejs": "^1.15.2"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.17",
        "concurrently": "^9.1.2",
        "cssnano": "^6.0.3",
        "nodemon": "^3.1.9",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1"
    },
    "nodemonConfig": {
        "watch": [
            "*.js",
            "modules/",
            "views/",
            "database/"
        ],
        "ext": "js,json,html",
        "ignore": [
            "node_modules/"
        ]
    }
}
